def poblacionTotal = 2000
def fechaActual = new Date().format('dd-MM-yyyy')
pipeline{
  agent any
  stages{
    stage('Calcular poblacion'){
      steps{
        script{
          poblacionNeta = poblacionTotal*0.8
          println 'La poblacion neta de Bilbao es de: ' + poblacionNeta + ' habitantes.'
          writeFile(file: "poblacion_neta_${fechaActual}.txt", text: 'La poblacion neta de Bilbao es de: ' + poblacionNeta + ' habitantes.')
        }
      }
    }
  }
}
