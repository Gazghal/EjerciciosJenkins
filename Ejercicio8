numero1 = 0
numero2 = 0
pipeline{
  agent any
  stages{
    stage('Leer fichero'){
      steps{
        script{
           fichero = readFile(file: "\\numeros.txt")
            lines = fichero.readLines()
            numero1 = lines[0].toInteger()
            numero2 = lines[1].toInteger()
        }
      }
    }
    stage('Sumar'){
      steps{
        script{
           suma = numero1 + numero2
          println 'El resultado de la suma es: ' + suma
        }
      }
    }stage('Restar'){
      steps{
        script{
           resta = numero1 - numero2
          println 'El resultado de la resta es: ' + resta
        }
      }
    }stage('Multiplicar'){
      steps{
        script{
           multiplicacion = numero1 * numero2
          println 'El resultado de la multiplicacion es: ' + multiplicacion
        }
      }
    }stage('Dividir'){
      steps{
        script{
           division = numero1 / numero2
          println 'El resultado de la division es: ' + division
        }
      }
    }
  }
}
