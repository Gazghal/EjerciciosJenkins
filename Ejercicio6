pipeline{
  agent any
  stages{
    stage('Clima actual'){
      steps{
        script{
          clima = 'soleado'
          println 'El clima actual es: ' + clima
        }
      }
    }
    stage('Poblacion actual'){
      steps{
        script{
          poblacion = '500'
          println 'Actualmente hay ' + poblacion + ' habitantes.'
        }
      }
    }
  }
}
