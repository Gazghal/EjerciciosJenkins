def poblacionTotal = 2000
def fechaActual = new Date().format('dd/MM/yyyy')
pipeline{
  agent any
  stages{
    stage('Calcular poblacion'){
      steps{
        script{
          poblacionNeta = poblacionTotal*0.8
          println 'La población neta de Bilbao es de: ' + poblacionNeta + ' habitantes.'
          writeFile(file: "población_neta_${fechaActual}.txt", text: poblacionNeta)
        }
      }
    }
  }
}
